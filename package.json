{
    "name": "@webpd/compiler",
    "version": "0.1.1",
    "description": "WebPd compiler package",
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "type": "module",
    "license": "LGPL-3.0",
