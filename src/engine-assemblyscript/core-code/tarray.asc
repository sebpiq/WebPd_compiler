const _tarray_ARRAYS: Map<string, FloatArray> = new Map()

// =========================== EXPORTED API
function x_tarray_createListOfArrays(): FloatArray[] {
    const tarray: FloatArray[] = []
    return tarray
}

function x_tarray_pushToListOfArrays(arrays: FloatArray[], array: FloatArray): void {
    arrays.push(array)
}

function x_tarray_getListOfArraysLength(arrays: FloatArray[]): Int {
    return arrays.length
}

function x_tarray_getListOfArraysElem(arrays: FloatArray[], index: Int): FloatArray {
    return arrays[index]
}

// =========================== TARRAY API
function tarray_create(length: Int): FloatArray {
    return new ${FloatArray}(length)
}

function tarray_get(
    arrayName: string,
): FloatArray {
    if (!_tarray_ARRAYS.has(arrayName)) {
        throw new Error('Unknown array ' + arrayName)
    }
    return _tarray_ARRAYS.get(arrayName)
}

function tarray_has(
    arrayName: string,
): boolean {
    return _tarray_ARRAYS.has(arrayName)
}

function tarray_set(
    arrayName: string,
    array: FloatArray,
): void {
    _tarray_ARRAYS.set(arrayName, array)
    _events_ArraysChanged()
}