{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "bindings",
        "module": "ES2022",
        "target": "ES2021",
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node"
    },
    "typeRoots": ["./node_modules/@types"],
    "files": [
        "./src/engine-assemblyscript/run/*.ts", 
        "./src/engine-javascript/run/*.ts"
    ]
}
